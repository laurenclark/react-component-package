{
    "name": "docker-react-package-starter",
    "version": "1.0.0",
    "description": "",
    "main": "./lib/Package.js",
    "types": "./lib/types.d.ts",
    "scripts": {
        "start": "webpack serve --config webpack.config.js --env development --env $(grep PORT .env)",
        "build": "(rm -rf ./lib && webpack --config webpack.config.prod.js --mode production) && npm run typescript:declarations",
        "typescript:declarations": "tsc ./src/**/*.ts --declaration --emitDeclarationOnly --esModuleInterop --out ./lib/types.d.ts",
        "prepare": "husky install",
        "test": "jest --passWithNoTests",
        "lint:check": "eslint --ignore-path .eslintignore --ext .js,.ts,.jsx,.tsx .",
        "lint:fix": "eslint --ignore-path .eslintignore --ext .js,.ts,.jsx,.tsx . --fix",
        "prettier:format": "prettier --ignore-path .prettierignore --write \"**/*.+(js|ts|json|ts|tsx)\"",
        "new:component": "hygen new component"
    },
    "repository": {
        "type": "git",
        "url": ""
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": ""
    },
    "homepage": "",
    "dependencies": {
        "@reduxjs/toolkit": "^1.8.3",
        "@types/react-redux": "^7.1.24",
        "babel-jest": "^28.1.1",
        "husky": "^8.0.1",
        "lint-staged": "^13.0.3",
        "prettier": "^2.7.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-redux": "^8.0.2",
        "typescript": "^4.7.4"
    },
    "devDependencies": {
        "@babel/core": "^7.18.6",
        "@babel/preset-env": "^7.18.6",
        "@babel/preset-react": "^7.18.6",
        "@babel/preset-typescript": "^7.18.6",
        "@testing-library/jest-dom": "^5.16.4",
        "@testing-library/react": "^13.3.0",
        "@types/react": "^18.0.14",
        "@types/react-dom": "^18.0.5",
        "@typescript-eslint/eslint-plugin": "^5.30.7",
        "babel-loader": "^8.2.5",
        "css-loader": "^6.7.1",
        "dotenv-webpack": "^7.1.1",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-react": "^7.30.1",
        "file-loader": "^6.2.0",
        "html-loader": "^3.1.2",
        "html-webpack-plugin": "^5.5.0",
        "hygen": "^6.2.7",
        "jest": "^28.1.1",
        "jest-environment-jsdom": "^28.1.1",
        "sass": "^1.53.0",
        "sass-loader": "^13.0.2",
        "style-loader": "^3.3.1",
        "ts-loader": "^9.3.1",
        "webpack": "^5.73.0",
        "webpack-cli": "^4.10.0",
        "webpack-dev-server": "^4.9.2"
    }
}
